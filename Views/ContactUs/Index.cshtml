@model INFT3050.Models.ContactMessage

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Luxe Furniture</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
    <partial name="_Nav" />
    <main>
        <section class="contact-header">
            <h1>Contact Luxe Furniture</h1>
            <p>We'd love to hear from you! Whether you have questions about our products, need assistance with an order, or want to provide feedback, our team is here to help.</p>
        </section>
        <section class="contact-section">
            <div class="image-box">
                <img src="~/images/showroom.jpg" alt="Showroom">
            </div>
            <div class="contact-form-container">
                <h2>Contact Form</h2>
                @if (TempData["SuccessMessage"] != null)
                {
                    <p style="font-weight: bold; color: red;" class="success-message">@TempData["SuccessMessage"]</p>
                }
                <form asp-action="Index" method="post">
                    <input type="text" asp-for="Name" placeholder="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="email" asp-for="Email" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <textarea asp-for="Message" placeholder="Your Message" rows="5" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                    <button type="submit">Submit</button>
                </form>
                <section class="contact-info-container">
                    <p><strong>Get in Touch</strong></p>
                    <p>Email: info@luxefurniture.com</p>
                    <p>Phone: +65 1234 5678</p>
                    <p>Address: 6 Raffles Boulevard, #04-101/102, Marina Square, Singapore 039594</p>
                    <p>Business Hours: Mon - Fri, 9:00 AM - 6:00 PM</p>
                </section>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h4>JOIN OUR MAILING LIST</h4>
                <form>
                    <input type="email" placeholder="Email address">
                    <button type="submit">Submit</button>
                </form>
                <p>Sign up to receive product updates and special offers from us</p>
            </div>
            <div class="footer-section">
                <h4>HOW FURNITURE</h4>
                <p>A master piece of furniture will be a part of your life.</p>
                <p>A treasure to next generation.</p>
                <p>It's a choice for decade, or even a century.</p>
            </div>
            <div class="footer-section">
                <h4>CONTACT US</h4>
                <p>Email: contact@luxefurniture.com</p>
                <p>Phone: (123) 456-7890</p>
                <p>Address: 123 Luxe Street, Furniture City, FC 12345</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Luxe Furniture</p>
            <div class="payment-methods">
                <img src="~/images/american_exp.png" alt="American Express">
                <img src="~/images/google_pay.png" alt="Google Pay">
                <img src="~/images/apple_pay.png" alt="Apple Pay">
                <img src="~/images/paypal.png" alt="PayPal">
                <img src="~/images/shop.png" alt="Shopify">
                <img src="~/images/visa.png" alt="Visa">
            </div>
        </div>
    </footer>

    <script src="~/scripts.js"></script>
</body>
</html>
