@using INFT3050.Models
@model List<INFT3050.ViewModel.ProductCategoryVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxe Furniture</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<partial name="_Nav" />
<body>
    <section class="announcement">
        <img src="~/images/announcementfinal.png" alt="Announcement Image">
    </section>
    <section class="popular-items">
        <div class="section-header">
            <h2>POPULAR ITEMS</h2>
        </div>
        <a asp-action="Popular" asp-controller="Furniture" class="see-more">See more ></a>
        <section class="product-list">
            @foreach (var item in Model.Where(p => p.Product.Status == ProductStatus.Popular).Take(6))
            {
                <div class="product-item">
                    <a style="text-decoration: none; color: inherit;" href="@Url.Action("Product", "Furniture",  new { name = item.Product.Name })">
                        <img class="product-image" src="~/product/@item.Product.ImagePath" width="300" height="400" alt="@item.Product.Name">
                        <p>@item.Product.Name <p>
                        <p>From SGD $@item.Product.Price.ToString()</p>
                    </a>
                </div>
            }
        </section>
    </section>
    <section class="new-arrivals">
        <div class="section-header">
            <h2>NEW ARRIVALS</h2>
        </div>
        <a asp-action="NewArrivals" asp-controller="Furniture" class="see-more">See more ></a>
        <section class="product-list">
            @foreach (var item in Model.Where(p => p.Product.Status == ProductStatus.NewArrivals).Take(6))
            {
                <div class="product-item">
                    <a style="text-decoration: none; color: inherit;" href="@Url.Action("Product", "Furniture",  new { name = item.Product.Name })">
                        <img class="product-image" src="~/product/@item.Product.ImagePath" width="300" height="400" alt="@item.Product.Name">
                        <p>@item.Product.Name <p>
                        <p>From SGD $@item.Product.Price.ToString()</p>
                    </a>
                </div>
            }
        </section>
    </section>

    <partial name="_Footer" />

    <script src="scripts.js"></script>
</body>
</html>

