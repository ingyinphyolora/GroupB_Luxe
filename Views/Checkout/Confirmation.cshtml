@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxe Furniture</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIqG6kG6h60OzNS4zG6lkpP1EwL9nwsuKfF4rk5W1q4oVOsiwx" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 0;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        header {
            text-align: center;
            background-color: #050505;
            color: #e2a46d;
            padding: 20px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

            header h1 {
                margin: 0;
                font-size: 24px;
            }

        main {
            padding: 40px;
        }

            main p {
                font-size: 18px;
                margin-bottom: 20px;
            }

        .delivery-info {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .delivery-info p {
                margin: 0;
                font-size: 16px;
                color: #555;
            }

        main a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }

            main a:hover {
                background-color: #be7a3e;
            }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Order Confirmation</h1>
        </header>
        <main>
            <p>Thank you for your purchase with LUXE! Your order has been placed successfully.</p>
            <div class="delivery-info">
                <p>Your order will be delivered in 3 to 5 business days.</p>
            </div>
            <a asp-action="Index" asp-controller="Home">Return to Home</a>
        </main>
    </div>

</body>
</html>
