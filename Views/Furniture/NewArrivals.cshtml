@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxe Furniture</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIqG6kG6h60OzNS4zG6lkpP1EwL9nwsuKfF4rk5W1q4oVOsiwx" crossorigin="anonymous"></script>
</head>
<partial name="_Nav" />
<body>
    <main>
        <section class="furniture-list">

            <section class="popular-items">
                <div class="section-header">
                    <h2>@ViewBag.Title</h2>
                </div>
                <section class="product-list">
                    @foreach (var item in Model)
                    {
                        <div class="product-item">
                            <a style="text-decoration: none; color: inherit;" href="@Url.Action("Product", "Furniture", new { name = item.Product.Name })">
                                <img class="product-image" src="~/product/@item.Product.ImagePath" width="300" height="400" alt="@item.Product.Name">
                                <p>@item.Product.Name <p>
                                <p>From SGD $@item.Product.Price.ToString()</p>
                            </a>
                        </div>
                    }
                </section>
            </section>
        </section>
    </main>


    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h4>JOIN OUR MAILING LIST</h4>
                <form>
                    <input type="email" placeholder="Email address">
                    <button type="submit">Submit</button>
                </form>
                <p>Sign up to receive product updates and special offers from us</p>
            </div>
            <div class="footer-section">
                <h4>LUXE FURNITURE</h4>
                <p>A master piece of furniture will be a part of your life.</p>
                <p>A treasure to next generation.</p>
                <p>It's a choice for decade, or even a century.</p>
            </div>
            <div class="footer-section">
                <h4>CONTACT US</h4>
                <p>Email: contact@luxefurniture.com</p>
                <p>Phone: (123) 456-7890</p>
                <p>Address: 123 Luxe Street, Furniture City, FC 12345</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Luxe Furniture</p>
            <div class="payment-methods">
                <img src="~/images/american_exp.png" alt="American Express">
                <img src="~/images/google_pay.png" alt="Google Pay">
                <img src="~/images/apple_pay.png" alt="Apple Pay">
                <img src="~/images/paypal.png" alt="PayPal">
                <img src="~/images/shop.png" alt="Shopify">
                <img src="~/images/visa.png" alt="Visa">
            </div>
        </div>
    </footer>

    <script src="scripts.js"></script>
</body>
</html>
