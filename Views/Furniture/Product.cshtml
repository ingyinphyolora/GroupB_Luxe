@model INFT3050.Models.Product


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart - Luxe Furniture</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .card {
            display: flex;
            flex-direction: row;
        }

        .card-img-left {
            object-fit: cover;
            width: 400px;
            height: 500px;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-size: 1.5rem; /* Increase font size */
            margin-left: 1.5rem; /* Add margin between image and text */
        }

        .card-title {
            font-size: 2.5rem; /* Increase title size */
        }

        .card-text {
            font-size: 1.75rem; /* Increase text size */
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Adjust height as needed */
        }



    </style>
</head>
<partial name="_Nav" />

<div class="product-list" style="
    margin-left: 300px;
    margin-top: 70px;
    margin-bottom: 30px;">
    <div class="product-item">
        <div class="product-image-container">
            <img src="~/product/@Model.ImagePath" alt="Product Image" class="product-image">
        </div>
    </div>
    <div>
        <h2>@Model.Name</h2>
        <h2>SGD @Model.Price.ToString()</h2>
        <p>Category : @Model.Category.Name</p>
        <p>Status: @Model.Status</p>
        <p>Stock : @Model.Stock</p>
        <h2>Material</h2>
        <p>Tabletop: Tempered Glass</p>
        <p>Base: Solid Wood with Metal Accents</p>
        <p>
            Enhance your living space with the
            SPAGO Circle Table-an ideal blend of elegance and functionality. Perfect for contemporary homes, the SPAGO Table offers versatile use for your living area.
            Its sleek and stylish design adds a touch of sophistication while ensuring durability.
        </p>
        <label for="quantity">Quantity:</label>
        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productID" value="@Model.ProductId" />
            <input type="number" name="quantity" value="1" min="1" class="quantity-input">
            <button type="submit" class="add-to-cart-btn">Add to Cart</button>
        </form>
    </div>

</div>





