@model INFT3050.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .product-details dl dt {
            font-weight: bold;
        }

        .product-details dl dd {
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h1 class="card-title">@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>
                <div class="product-details">
                    <h4>Product</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            Name
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-3">
                            Price
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Price
                        </dd>
                        <dt class="col-sm-3">
                            Stock
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Stock
                        </dd>
                        <dt class="col-sm-3">
                            Status
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Status
                        </dd>
                        <dt class="col-sm-3">
                            Category
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Category.Name
                        </dd>
                        <dt class="col-sm-3">
                            <label class="font-weight-bold">Image</label>
                        <dd class="col-sm-9">
                            <img src="~/product/@Model.ImagePath" width="200" height="200" alt="@Model.Name" class="img-fluid rounded" />
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
