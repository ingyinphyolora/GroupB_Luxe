@using INFT3050.Models
@model List<Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product List</h1>

<div class="mb-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add New Product</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Status</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                    <td><img src="~/product/@item.ImagePath" alt="Product Image" style="max-width: 100px;" /></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-secondary">Edit</a>
                            <a asp-controller="Product"  asp-action="Delete"
                               asp-route-room="@item.Category.Room"
                               asp-route-category="@item.Category.Name"
                               asp-route-productName="@item.Name"
                               class="btn btn-danger">Delete</a>

                            <a asp-controller="Product" asp-action="Details"
                               asp-route-room="@item.Category.Room"
                               asp-route-category="@item.Category.Name"
                               asp-route-productName="@item.Name"
                               class="btn btn-info">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
