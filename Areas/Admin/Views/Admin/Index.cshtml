@model IEnumerable<INFT3050.ViewModel.UserVM>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Users</h2>
    <table class="table table-striped table-bordered table-hover table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>  
                <th scope="col">Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="w-25">@user.Name</td>
                    <td class="w-25">@user.UserName</td>
                    <td class="w-25">@user.Email</td>
                    <td class="w-25">@string.Join(", ", user.Roles)</td>
                    <td class="w-25">
                        <div class="btn-group" role="group" aria-label="User Actions">
                            <a asp-action="ChangePassword" asp-controller="Admin" asp-route-userId="@user.Id" class="btn btn-warning btn-sm mx-1">Change Password</a>
                            <a asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
