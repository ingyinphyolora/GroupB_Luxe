@model INFT3050.ViewModel.UserVM

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .user-details dl dt {
            font-weight: bold;
        }

        .user-details dl dd {
            margin-bottom: 10px;
        }

    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h1 class="card-title">@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this user?</h3>
                <div class="user-details">
                    <h4>User</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            Name
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-3">
                            Email
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Email
                    </dl>

                    <a asp-action="DeleteUser" class="btn btn-danger" asp-route-userId="@Model.Id">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>

                </div>
            </div>
        </div>
    </div>
</body>
